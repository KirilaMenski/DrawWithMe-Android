<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/user_ll"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/gender_icon"
        android:layout_width="@dimen/xxld_size"
        android:layout_height="@dimen/xxd_size"
        android:layout_marginLeft="@dimen/m_dimen"
        android:layout_marginRight="@dimen/m_dimen"
        tools:src="@drawable/ic_female_icon_60dp"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_small"
        tools:text="Name"/>

</LinearLayout>